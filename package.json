{
  "name": "koa-server-starter",
  "version": "1.0.0",
  "description": "Koa Server starter",
  "author": "Abdulaziz Alimov",
  "private": true,
  "scripts": {
    "start": "ts-node -r dotenv/config -r tsconfig-paths/register src/index.ts",
